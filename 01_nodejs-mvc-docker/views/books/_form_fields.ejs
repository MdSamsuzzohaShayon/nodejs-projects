<div class="ui two fields">
    <div class="field">
        <label for="title">title</label>
        <input type="text" name="title" value="<%= book.title %>">
    </div>
    <div class="field">
        <label for="">Author</label>
        <select name="author" id="author">
            <% authors.forEach(author => { %>
                <% if(author.id === book.author){ %>
                    <option selected value="<%= author.id %>"><%= author.name %></option>
                <% }else{ %>
                    <option value="<%= author.id %>"><%= author.name %></option>
                <% } %>
            <% }) %>
        </select>
    </div>
</div>
<div class="ui two fields">
    <div class="field">
        <label for="publishDate">Publish Date</label>
        <input type="date" name="publishDate" value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0] %>" >
    </div>

    <div class="field">
        <label for="pageCount">Page count</label>
        <input type="number" name="pageCount" min="1" value="<%= book.pageCount %>" >
    </div>
</div>
<div class="ui two fields">
    <div class="field">
        <label for="cover">Cover</label>
        <input type="file" name="cover" class="filepond" >
    </div>

    <div class="field">
        <label for="description">Description</label>
        <textarea type="text" name="description" > <%= book.description %> </textarea>
    </div>
</div>
